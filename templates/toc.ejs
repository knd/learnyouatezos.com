<%- include('header'); -%>

<h1><%= site.title %></h1>

<h2>Table of Contents</h2>

<div class="toc">
  <ol>
    <li><a href="/">Home Page</a></li>
    <li>Table of Contents</li>

  <% pages.forEach((page) => { %>

    <li><a href="/<%= page.slug %>"><%= page.title %></a></li>
    <ul>
    <% page.sections.forEach((section) => { %>
      <li><a href="/<%= page.slug %>#<%= section.slug %>"><%= section.title
      %></a></li>
    <% }); %>
    </ul>

  <% }); %>

  </ol>
<div id="toc">

<%- include('footer'); -%>
